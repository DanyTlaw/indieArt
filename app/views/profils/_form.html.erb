
  <%= form_for(@profil) do |f| %>
    <% if @profil.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profil.errors.count, "error") %> prohibited this profil from being saved:</h2>

        <ul>
        <% @profil.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
   <div class="container">
      <div class="row">
        <div class="col-md-10">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3 class="panel-title">Create a new Profil</h3>
            </div>
             <div class="panel-body" >
              <div class="form-group" style="float: left">
                <div class="field">
                  <%= f.label "Profil name", :class=>"control-label" %>
                  <%= f.text_field :profilname, :placeholder => 'Profil name', :class=>"form-control"%>
                </div>
                <div class="field">
                  <%= f.label "Country", :class=>"control-label" %>
                  <%= f.text_field :land, :placeholder => 'Country', :class=>"form-control"%> 
                </div>
                <div class="field">
                  <%= f.label "City", :class=>"control-label" %>
                  <%= f.text_field :ort, :placeholder => 'Living place' , :class=>"form-control"%>
                </div>
                <div class="field">
                  <%= f.label "Language", :class=>"control-label" %>
                  <%= f.text_field :sprache, :placeholder => 'Language', :class=>"form-control"%>
                </div>
                <div class="field">
                  <%= f.label "Surname", :class=>"control-label" %>
                  <%= f.text_field :vorname, :placeholder => 'Surname', :class=>"form-control"%>
                </div>
                <div class="field">
                  <%= f.label "Familyname", :class=>"control-label" %>
                  <%= f.text_field :nachname, :placeholder => 'Family name', :class=>"form-control"%>
                </div>
                <div class="field">
                  <%= f.label "Birthday", :class=>"control-label" %>
                  <%= f.date_select :birthday, :placeholder => 'Birthday', :class=>"form-control"%>
                </div>

              </div>
              
                <div class="field" style="float: left; margin-left: 10px">
                  <%= f.label "About you", :class=>"control-label" %>
                  <%= f.text_area  :bio, :size => "64x12", :placeholder => 'Write about yourself', :class=>"form-control"%>
                  <div style=" margin-top: 10px">
                    <%= f.submit "Erstellen" , :class=>'btn btn-warning'%>                  
                  </div>

                </div>
            </div>
        </div>
      </div>
     </div> 

  </div>

<% end %>
